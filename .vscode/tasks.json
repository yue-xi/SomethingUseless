{
    "version": "2.0.0",  // 配置文件版本号
    
    "tasks": [
        {
            "type": "shell",  // 任务类型，shell表示这是一个shell命令
            "label": "task g++",  // 任务标签，用于标识任务
            "command": "D:\\MinGW64\\bin\\g++.exe",  // 要运行的命令
            "args": [  // 命令行参数
                "-g",  // 生成调试信息
                "${file}",  // 当前文件
                "-o",  // 指定输出文件
                "${fileDirname}\\.exe\\${fileBasenameNoExtension}.exe",  // 输出文件路径
                "-I",  // 指定包含目录
                "D:\\CppWorkspace",  // 包含的目录
                "-std=c++17"  // 使用C++17标准
            ],
            "options": {
                "cwd": "D:\\MinGW64\\bin"  // 任务的当前工作目录
            },
            "problemMatcher": ["$gcc"],  // 用于从编译器输出中捕获错误和警告的模式
            "group": "build"  // 任务组，这里指定为构建任务
        },
        {
            "type": "cppbuild",  // 任务类型，表示这是一个C++构建任务
            "label": "C/C++: cpp.exe build active file",  // 任务的标签，用于标识任务
            "command": "D:\\MinGW64\\bin\\cpp.exe",  // 要执行的命令
            "args": [  // 命令行参数
                "-fdiagnostics-color=always",  // 使编译器输出具有颜色的诊断
                "-g",  // 生成调试信息
                "${file}",  // 当前文件
                "-o",  // 指定输出文件
                "${fileDirname}\\.exe\\${fileBasenameNoExtension}.exe"  // 输出文件路径
            ],
            "options": {
                "cwd": "${fileDirname}"  // 任务的当前工作目录
            },
            "problemMatcher": ["$gcc"],  // 用于从编译器输出中捕获错误和警告的模式
            "group": "build",  // 任务组，这里指定为构建任务
            "detail": "Task generated by Debugger."  // 任务详情，说明此任务是由调试器生成的
        },
        {
            "type": "cppbuild",  // 任务类型，表示这是一个C++构建任务
            "label": "C/C++: g++.exe build active file",  // 任务的标签，用于标识任务
            "command": "D:\\MinGW64\\bin\\g++.exe",  // 要执行的命令
            "args": [  // 命令行参数
                "-fdiagnostics-color=always",  // 使编译器输出具有颜色的诊断
                "-g",  // 生成调试信息
                "${file}",  // 当前文件
                "-o",  // 指定输出文件
                "${fileDirname}\\.exe\\${fileBasenameNoExtension}.exe"  // 输出文件路径
            ],
            "options": {
                "cwd": "D:\\MinGW64\\bin"  // 任务的当前工作目录
            },
            "problemMatcher": ["$gcc"],  // 用于从编译器输出中捕获错误和警告的模式
            "group": {  // 任务组
                "kind": "build",  // 表示这是一个构建任务
                "isDefault": true  // 表示这是默认的构建任务
            },
            "detail": "Task generated by Debugger."  // 任务详情，说明此任务是由调试器生成的
        }
    ]
}

